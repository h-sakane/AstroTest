---
import DefaultLayout from '../../../layouts/DefaultLayout.astro'

export async function getStaticPaths() {
  const tools = [
    {
      id: '1',
      title: 'Damage Calculator',
      category: 'Calculator',
      icon: 'üî¢',
      description: 'Calculate character damage accurately.',
    },
    {
      id: '2',
      title: 'Team Composition Simulator',
      category: 'Simulator',
      icon: 'üë•',
      description: 'Simulate optimal team compositions.',
    },
    {
      id: '3',
      title: 'Character Database',
      category: 'Database',
      icon: 'üìä',
      description: 'Search all character stats and skills.',
    },
    {
      id: '4',
      title: 'Timer & Stopwatch',
      category: 'Utility',
      icon: '‚è±Ô∏è',
      description: 'Timer tool for training and tournaments.',
    },
  ]

  return tools.map((tool) => ({
    params: { id: tool.id },
    props: { tool },
  }))
}

const { tool } = Astro.props
---

<DefaultLayout title={tool.title} description={tool.description}>
  <section class="my-12">
    <div class="space-content container">
      <a href="/en/tools" class="text-sm hover:underline">‚Üê Back to Tools List</a>
      <h1 class="mt-4">{tool.icon} {tool.title}</h1>
      <p class="text-sm text-gray-600">Category: {tool.category}</p>
    </div>
  </section>

  <section class="my-12">
    <div class="container">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        {
          tool.id === '1' && (
            <div class="damage-calculator">
              <h2 class="text-2xl font-bold mb-4">Damage Calculation</h2>
              <div class="space-y-4">
                <div>
                  <label for="base-attack" class="block mb-2">
                    Base Attack:
                  </label>
                  <input
                    type="number"
                    id="base-attack"
                    class="w-full px-4 py-2 border rounded"
                    placeholder="100"
                  />
                </div>
                <div>
                  <label for="skill-multiplier" class="block mb-2">
                    Skill Multiplier (%):
                  </label>
                  <input
                    type="number"
                    id="skill-multiplier"
                    class="w-full px-4 py-2 border rounded"
                    placeholder="150"
                  />
                </div>
                <div>
                  <label for="enemy-defense" class="block mb-2">
                    Enemy Defense:
                  </label>
                  <input
                    type="number"
                    id="enemy-defense"
                    class="w-full px-4 py-2 border rounded"
                    placeholder="50"
                  />
                </div>
                <button
                  id="calculate-damage"
                  class="bg-primary-500 text-white px-6 py-3 rounded hover:bg-primary-600"
                >
                  Calculate
                </button>
                <div id="damage-result" class="text-xl font-bold mt-4" />
              </div>
            </div>
          )
        }
        {
          tool.id === '2' && (
            <div class="team-simulator">
              <h2 class="text-2xl font-bold mb-4">Team Composition</h2>
              <p>Team composition simulator is under development.</p>
            </div>
          )
        }
        {
          tool.id === '3' && (
            <div class="character-database">
              <h2 class="text-2xl font-bold mb-4">Character Search</h2>
              <input
                type="text"
                id="character-search"
                class="w-full px-4 py-2 border rounded mb-4"
                placeholder="Enter character name..."
              />
              <div id="search-results">
                <p>Character database is under development.</p>
              </div>
            </div>
          )
        }
        {
          tool.id === '4' && (
            <div class="timer-tool">
              <h2 class="text-2xl font-bold mb-4">Timer</h2>
              <div class="text-center">
                <div id="timer-display" class="text-6xl font-mono mb-4">
                  00:00:00
                </div>
                <div class="flex gap-4 justify-center">
                  <button
                    id="start-timer"
                    class="bg-green-500 text-white px-6 py-3 rounded hover:bg-green-600"
                  >
                    Start
                  </button>
                  <button
                    id="stop-timer"
                    class="bg-red-500 text-white px-6 py-3 rounded hover:bg-red-600"
                  >
                    Stop
                  </button>
                  <button
                    id="reset-timer"
                    class="bg-gray-500 text-white px-6 py-3 rounded hover:bg-gray-600"
                  >
                    Reset
                  </button>
                </div>
              </div>
            </div>
          )
        }
      </div>
    </div>
  </section>

  <section class="my-12">
    <div class="container">
      <a href="/en/tools" class="btn btn-primary">‚Üê Back to Tools List</a>
    </div>
  </section>
</DefaultLayout>

<script>
  const calculateBtn = document.getElementById('calculate-damage')
  if (calculateBtn) {
    calculateBtn.addEventListener('click', () => {
      const baseAttack = parseFloat(
        (document.getElementById('base-attack') as HTMLInputElement)?.value || '0'
      )
      const skillMultiplier = parseFloat(
        (document.getElementById('skill-multiplier') as HTMLInputElement)?.value || '0'
      )
      const enemyDefense = parseFloat(
        (document.getElementById('enemy-defense') as HTMLInputElement)?.value || '0'
      )

      const damage = Math.floor((baseAttack * (skillMultiplier / 100) * (100 - enemyDefense)) / 100)
      const resultEl = document.getElementById('damage-result')
      if (resultEl) {
        resultEl.textContent = `Expected Damage: ${damage}`
      }
    })
  }

  let timerInterval: number | null = null
  let timerSeconds = 0

  const timerDisplay = document.getElementById('timer-display')
  const startBtn = document.getElementById('start-timer')
  const stopBtn = document.getElementById('stop-timer')
  const resetBtn = document.getElementById('reset-timer')

  function updateTimerDisplay() {
    const hours = Math.floor(timerSeconds / 3600)
    const minutes = Math.floor((timerSeconds % 3600) / 60)
    const seconds = timerSeconds % 60
    if (timerDisplay) {
      timerDisplay.textContent = `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`
    }
  }

  if (startBtn) {
    startBtn.addEventListener('click', () => {
      if (!timerInterval) {
        timerInterval = window.setInterval(() => {
          timerSeconds++
          updateTimerDisplay()
        }, 1000)
      }
    })
  }

  if (stopBtn) {
    stopBtn.addEventListener('click', () => {
      if (timerInterval) {
        clearInterval(timerInterval)
        timerInterval = null
      }
    })
  }

  if (resetBtn) {
    resetBtn.addEventListener('click', () => {
      if (timerInterval) {
        clearInterval(timerInterval)
        timerInterval = null
      }
      timerSeconds = 0
      updateTimerDisplay()
    })
  }
</script>
